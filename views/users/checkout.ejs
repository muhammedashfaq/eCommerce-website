    <script>
      $("#checkout").submit((e)=>{
        const amount = document.getElementById("total1").innerHTML;
        const amount2 = document.getElementById("total2").innerHTML;
        // const discount = document.getElementById("gt3").innerHTML;
        let address = $("input[name=address]:checked").val();
        let payment = $("input[name=Payment]:checked").val();

        console.log(amount);
        console.log(address)
        console.log(payment)
        e.preventDefault();
        $.ajax({
          url:"/checkout",
          method:"post",
          data:{
            amount:amount,
            total:amount2,
            address:address,
            payment:payment
          },
          success:(response)=>{
            if(response.codsuccess){
              location.href = "/order-placed";
            }else{
              razorpayPayment(response.order);
            }
          }
        })
      })
    
