              var rzp1 = new Razorpay(options);
                  rzp1.open();
            }
      function verifyPayment(payment,order){
        const amount = document.getElementById("total1").innerHTML;
        // const amount2 = document.getElementById("gt2").innerHTML;
        $.ajax({
          url:"/verifyPayment",
          method:"post",
          data:{
