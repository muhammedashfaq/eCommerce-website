<%- include('../users/layouts/user_header.ejs')%>






<section style="background-color: #eee;">
    <div class="container py-5">

  
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
            
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          
          </nav>
        </div>
      </div>
        
     
  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%= user%></h5>
              <p class="text-muted mb-1">Full Stack Developer</p>
              <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
              <div class="d-flex justify-content-center mb-2">
                <button type="button" class="btn btn-primary">Follow</button>
                <button type="button" class="btn btn-outline-primary ms-1">Message</button>
              </div>
            </div>
          </div>
          
        </div>

        










        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= data.email%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">(097) 234-5678</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Mobile</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= data.mob%></p>
                </div>
              </div>
             
              
            </div>
          </div>


            <a class="btn_3" href="./add_address">ADD ADDRESS</a> <br><br>
          <div class="card mb-4">

                   
            <div class="card-body">
              <% address.address.forEach((value)=>{
                %>

                <%= value.fname%><%=value.sname%> <br>
                <%=value.address%><br>
                <%= value.mobile%><br>
                <%=value.email%><br>
                <%= value.pin%><br>
                <br>
                <div style="display: flex;">

                                     
                                          <!-- <div>
                                          
                                              <a  class="btn hero-btn " style="color: rgb(248, 246, 246);" href="/edit_address?id=<%=value._id%>">edit</a>
                  
                                           
                                          </div>  -->
                                          <div style="margin-left: 10px;">
                                          
                                            <a class="genric-btn danger-border circle arrow"  href="/delete_address?id=<%=value._id%>">Delete</a>
                                        
                  
                                         
                                        </div>
                                      </div>

                <hr>

                <%
              })%>
              


       

            
   
             
            
          </div>


        

          
         

        </div>
       
      </div>

    </div>
  </section>

  <%- include('../users/layouts/user_footer.ejs')%>
